<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.todolist.javafx.controllers.EditDialogController">
   <left>
      <VBox prefHeight="400.0" prefWidth="82.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="%Task_window">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="10.0" top="20.0" />
               </VBox.margin>
            </Label>
            <Label text="%Time_window">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="10.0" top="15.0" />
               </VBox.margin>
            </Label>
            <Label text="%Status_window">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="15.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </left>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="txtTask">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="20.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="txtTime">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="20.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="txtStatus">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="20.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="labelError" text="текст ошибки пустого ввода!">
               <VBox.margin>
                  <Insets bottom="15.0" left="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnOk" defaultButton="true" mnemonicParsing="false" onAction="#actionSave" prefHeight="25.0" prefWidth="64.0" text="ОК">
               <VBox.margin>
                  <Insets right="20.0" top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#actionClose" text="ОТМЕНА">
               <VBox.margin>
                  <Insets right="20.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </right>
</BorderPane>
